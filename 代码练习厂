#include<stdio.h>
int main()  int——整型数据类型
{
    printf("人生第一个代码"); printf——代表打印函数
    return 0;
}    
第二个代码
#include<stdio.h>
int main()
{
char ch='A'——char字符型数据类型
printf("%c",ch）; %c表示打印字符格式
return 0;
}
第三个代码
#include<stdio.h>
int main()
{
int age=18;
printf("%d18是我今年的年龄",age);%d——表示打印整型十进制格式
return 0; 
}
数据类型 ——long长整型 short短整型 char字符型 int整型 float单精度浮点型——小数点型
 第四个代码
 #include<stdio.h>
 int main()
 {
 int a=0;
 int b=0;
 int c=0;
 scanf_s("%d%d",&a,&b);&——代表地址存储也就是取地址符； scanf——代表输入函数，在这里的scanf_s——是在vss软件中特有的
 c=a+b;
 printf("c=%d",c);
 return 0;总结一下定义的变量要放在代码块的最前面
 }
 第五个代码
 #include<stdio.h>
 #define YBH 20 ———#define代表此时YBH就是等于20已经被定义
 int main()
 {
     int b=30;
     printf("%d",YBH+b);
     return 0;
 }
 第六个代码
 #include<stdio.h>
 int main()
 {
     char A[]={'a','b','c','\0'};
     char B[]="abc";
     printf("%s\n%s",A,B);——%s代表打印字符串格式 ——%c代表打印字符格式
     return 0；
     
 }
第七个代码
 #include<stdio.h>
 int main()
 {
     int a=0;
     printf("你要好好学习吗？(1/0)>:");
     scanf("%d",&a);
     if(a==1) ————选择语句如果
     printf("给你一个好offer\n"):
     else ————选择语句否则
     printf("回家种田\n");
     return 0;
 }
